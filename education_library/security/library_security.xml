<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="group_education_library" model="res.groups">
            <field name="name">Library</field>
            <field name="category_id" ref="education.module_category_education_others" />
            <field name="implied_ids" eval="[(4, ref('base.group_user')),(4, ref('account.group_account_invoice'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]" />
        </record>

        <!-- Rule for Media Queue Request to see own Record. -->
        <record model="ir.rule" id="group_student_media_request_rule">
            <field name="name">See Own media Queue Request</field>
            <field name="model_id" ref="model_education_media_queue" />
            <field name="domain_force"> [('user_id','=',user.id)]</field>
            <field name="groups"
                eval="[(4, ref('education.group_education_student'))]" />
        </record>

        <record model="ir.rule" id="view_media_request_rule">
            <field name="name">View Media Queue</field>
            <field name="model_id" ref="model_education_media_queue" />
            <field name="domain_force"> [(1,'=',1)]</field>
            <field name="groups"
                eval="[(4, ref('education.group_education_back_office'))]" />
        </record>

        <record id="education.group_education_back_office" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('education.group_education_faculty')),(4, ref('base.group_partner_manager')),(4, ref('account.group_account_invoice'))]"/>
        </record>
    </data>
</odoo>
