<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_education_timerange_form" model="ir.ui.view">
      <field name="name">view.education.timerange.form</field>
      <field name="model">education.timerange</field>
      <field name="arch" type="xml">
        <form string="Education timerange">
          <sheet>
            <group name="main">
              <field name="name"/>
            </group>
            <group string="Time Range" col="4">
              <field name="start_time" widget="float_time"/>
              <field name="end_time" widget="float_time"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_education_timerange_tree" model="ir.ui.view">
      <field name="name">view.education_timerange.tree</field>
      <field name="model">education.timerange</field>
      <field name="arch" type="xml">
        <tree string="Education timerange">
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="view_education_timerange_search" model="ir.ui.view">
      <field name="name">view.education_timerange.search</field>
      <field name="model">education.timerange</field>
      <field name="arch" type="xml">
        <search string="Education timerange">
          <field name="name"/>
          <group string="Group By" name="groupby">
            <filter name="name_groupby" string="name" context="{'group_by': 'name'}"/>
          </group>
        </search>
      </field>
    </record>

    <record id="education_timerange_action" model="ir.actions.act_window">
      <field name="name">Education timerange</field>
      <field name="res_model">education.timerange</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to create a new Education timerange.
        </p>
      </field>
    </record>

    <menuitem id="education_timerange_menu" parent="education.education_assistance_root" action="education_timerange_action" sequence="20"/>

  </data>
</odoo>
