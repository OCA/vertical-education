<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.rule" id="student_session_rule">
            <field name="name">Student Session rule</field>
            <field name="model_id" ref="model_education_session" />
            <field name="groups"
                eval="[(4, ref('education.group_education_student'))]" />
            <field name="domain_force"> [('user_ids','in',user.id)]</field>
        </record>

        <record model="ir.rule" id="backoffice_session_rule">
            <field name="name">Backoffice Session Rule</field>
            <field name="model_id" ref="model_education_session" />
            <field name="groups"
                eval="[(4, ref('education.group_education_back_office'))]" />
            <field name="domain_force"> [(1,'=',1)]</field>
        </record>

    </data>
</odoo>
