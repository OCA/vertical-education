<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="group_education_parent" model="res.groups">
            <field name="name">Parent</field>
            <field name="category_id" ref="education.module_category_education_others"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record model="ir.rule" id="parent_login_rule">
            <field name="name">Parent Login rule</field>
            <field name="model_id" ref="model_education_parent" />
            <field name="groups" eval="[(4, ref('education_parent.group_education_parent'))]" />
            <field name="domain_force"> [('user_id','=',user.id)]</field>
        </record>
        <record model="ir.rule" id="student_parent_login_rule">
            <field name="name">Student Parent Login rule</field>
            <field name="model_id" ref="model_education_student" />
            <field name="groups" eval="[(4, ref('education_parent.group_education_parent'))]" />
            <field name="domain_force"> [('parent_ids','in',[x.id for x in
                user.parent_ids])]</field>
        </record>
    </data>
</odoo>
