<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_education_facility_tree" model="ir.ui.view">
        <field name="name">education.facility.tree</field>
        <field name="model">education.facility</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <tree string="Facility">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>
    <record id="view_education_facility_form" model="ir.ui.view">
        <field name="name">education.facility.form</field>
        <field name="model">education.facility</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <form string="Facility">
                <sheet>
                    <group colspan="4" col="4">
                        <field name="name"/>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_education_facility_search" model="ir.ui.view">
        <field name="name">education.facility.search</field>
        <field name="model">education.facility</field>
        <field name="priority" eval="8"/>
        <field name="arch" type="xml">
            <search string="Facility">
                <field name="name"/>
                <field name="code"/>
                <newline/>
                <group expand="0" string="Group By...">
                    <filter string="Name" domain="[]" context="{'group_by':'name'}"/>
                    <filter string="Code" domain="[]" context="{'group_by':'code'}"/>
                </group>
            </search>
        </field>
    </record>
    <record model="ir.actions.act_window" id="act_open_education_facility_view">
        <field name="name">Facilities</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">education.facility</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_education_facility_search"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    <menuitem
        id="menu_education_facility_sub"
        name="Facilities"
        parent="education.menu_education_school_config_general"
        sequence="20"
        action="act_open_education_facility_view"
        groups="education.group_education_back_office,education.group_education_back_office_admin"/>
</odoo>
