<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="module_category_education" model="ir.module.category">
            <field name="name">Education</field>
            <field name="description">Helps you manage your institutes different-different users.</field>
            <field name="sequence">15</field>
        </record>
        <record id="module_category_education_others" model="ir.module.category">
            <field name="name">Education Others</field>
            <field name="description">Helps you manage your institutes different-different users.</field>
            <field name="sequence">20</field>
        </record>
        <record id="group_education_student" model="res.groups">
            <field name="name">Student</field>
            <field name="category_id" ref="module_category_education"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="group_education_faculty" model="res.groups">
            <field name="name">Faculty</field>
            <field name="category_id" ref="module_category_education"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="implied_ids" eval="[(4, ref('education.group_education_student')), (4, ref('base.group_user'))]"/>
        </record>
        <record id="group_education_back_office" model="res.groups">
            <field name="name">Back Office</field>
            <field name="category_id" ref="module_category_education"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="implied_ids" eval="[(4, ref('education.group_education_faculty')),(4, ref('base.group_partner_manager'))]"/>
        </record>
        <record id="group_education_back_office_admin" model="res.groups">
            <field name="name">Back Office Admin</field>
            <field name="category_id" ref="module_category_education"/>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="implied_ids" eval="[(4, ref('education.group_education_back_office')),(4, ref('base.group_system'))]"/>
        </record>

        <record model="ir.rule" id="student_login_rule">
            <field name="name">Student Login rule</field>
            <field name="model_id" ref="model_education_student" />
            <field name="groups"
                eval="[(4, ref('education.group_education_student'))]" />
            <field name="domain_force"> [('user_id','=',user.id)]</field>
        </record>

        <record model="ir.rule" id="view_students_rule">
            <field name="name">View Students</field>
            <field name="model_id" ref="model_education_student" />
            <field name="groups"
                eval="[(4, ref('education.group_education_faculty'))]" />
            <field name="domain_force"> [(1,'=',1)]</field>
        </record>

        <record model="ir.rule" id="faculty_login_rule">
            <field name="name">Faculty Login rule</field>
            <field name="model_id" ref="model_education_faculty" />
            <field name="groups"
                eval="[(4, ref('education.group_education_faculty'))]" />
            <field name="domain_force"> [('user_id','=',user.id)]</field>
        </record>

        <record model="ir.rule" id="view_faculty_rule">
            <field name="name">View Faculties</field>
            <field name="model_id" ref="model_education_faculty" />
            <field name="groups"
                eval="[(4, ref('education.group_education_back_office'))]" />
            <field name="domain_force"> [(1,'=',1)]</field>
        </record>

        <record model="ir.rule" id="student_subject_registration_rule">
            <field name="name">Student Subject Registration Rule</field>
            <field name="model_id" ref="model_education_subject_registration" />
            <field name="groups"
                eval="[(4, ref('education.group_education_student'))]" />
            <field name="domain_force"> [('student_id.user_id','=',user.id)]</field>
        </record>

        <record model="ir.rule" id="view_all_subject_registration_rule">
            <field name="name">View Students Registration</field>
            <field name="model_id" ref="model_education_subject_registration" />
            <field name="groups"
                eval="[(4, ref('education.group_education_faculty'))]" />
            <field name="domain_force"> [(1,'=',1)]</field>
        </record>
</odoo>
