<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_education_group_form" model="ir.ui.view">
    <field name="name">view.education.group.form</field>
    <field name="model">education.group</field>
    <field name="arch" type="xml">
      <form string="Education group">
        <header>
          <button name="action_draft" type="object" states="cancel" string="To draft" class="oe_highlight"/>
          <button name="action_active" type="object" states="draft" string="Active" class="oe_highlight"/>
          <button name="action_done" type="object" states="active" string="Done" class="oe_highlight"/>
          <button name="action_cancel" type="object" states="draft" string="Cancel" class="oe_highlight"/>
          <field name="state" widget="statusbar" statusbar_visible="draft,active,done"/>
        </header>
        <sheet>
          <div class="oe_button_box" name="button_box" modifiers="{}">
            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive" modifiers="{}" options="{}">
              <field name="active" widget="boolean_button" options="{'terminology': 'archive'}" modifiers="{}"/>
            </button>
          </div>
          <div class="oe_title">
            <h1>
              <field name="code" readonly="1"/>
            </h1>
          </div>
          <group >
            <field name="name"/>
          </group>
          <group name="general" col="4">
            <field name="course_id"/>
            <field name="tutor_id"/>
            <field name="date_from"/>
            <field name="date_to"/>
            <field name="company_id" widget="selection" groups="base.group_multi_company"/>
          </group>
          <notebook>
            <page name="students" string="Students">
              <group name="Enrollments">
                <field name="enrollment_ids" nolabel="1" readonly="1">
                  <tree>
                    <field name="code"/>
                    <field name="student_id"/>
                    <field name="state"/>
                  </tree>
                </field>
              </group>
            </page>
          </notebook>
        </sheet>
        <div class="oe_chatter">
          <field name="message_follower_ids" widget="mail_followers"/>
          <field name="message_ids" widget="mail_thread"/>
        </div>
      </form>
    </field>
  </record>

  <record id="view_education_group_tree" model="ir.ui.view">
    <field name="name">view.education.group.tree</field>
    <field name="model">education.group</field>
    <field name="arch" type="xml">
      <tree string="Educaiton group">
        <field name="name"/>
        <field name="code"/>
        <field name="course_id"/>
        <field name="date_from"/>
        <field name="date_to"/>
        <field name="state"/>
      </tree>
    </field>
  </record>

  <record id="view_education_group_search" model="ir.ui.view">
    <field name="name">view.education.group.search</field>
    <field name="model">education.group</field>
    <field name="arch" type="xml">
      <search string="groups">
        <field name="name"/>
        <field name="code"/>
        <field name="course_id"/>
        <field name="date_from"/>
        <field name="date_to"/>
        <field name="state"/>
        <group string="Group By" name="groupby">
          <filter string="Name" context="{'group_by': 'name'}"/>
          <filter string="Code" context="{'group_by': 'code'}"/>
          <filter string="Course" context="{'group_by': 'course_id'}"/>
        </group>
      </search>
    </field>
  </record>

  <record id="education_group_action" model="ir.actions.act_window">
    <field name="name">Groups</field>
    <field name="res_model">education.group</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create">
        Click to create a new Group.
      </p>
    </field>
  </record>

  <record id="group_sequence_1" model="ir.sequence">
    <field name="name">Group Sequence</field>
    <field name="code">education.group</field>
    <field name="prefix">GRP</field>
    <field name="padding">4</field>
    <field eval="1" name="company_id"/>
  </record>

  <menuitem id="education_group" parent="education_course_root" action="education_group_action" sequence="20"/>

</odoo>
