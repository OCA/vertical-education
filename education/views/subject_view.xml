<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_education_subject_form" model="ir.ui.view">
    <field name="name">view.education.subject.form</field>
    <field name="model">education.subject</field>
    <field name="arch" type="xml">
      <form string="Education Subject">
        <!-- <header>
          <button name="do_toggle_cancelled" type="object" attrs="{'invisible': [('state','in',['done','cancelled'])]}" string="Cancelled" class="oe_highlight"/>
          <field name="state" widget="statusbar"/>
        </header> -->
        <sheet>
          <h1>
            <group name="main">
              <field name="name"/>
            </group>
          </h1>
        </sheet>
        <div class="oe_chatter">
          <field name="message_follower_ids" widget="mail_followers"/>
          <field name="message_ids" widget="mail_thread"/>
        </div>
      </form>
    </field>
  </record>

  <record id="view_education_subject_tree" model="ir.ui.view">
    <field name="name">view.education.subject.tree</field>
    <field name="model">education.subject</field>
    <field name="arch" type="xml">
      <tree string="Educaiton subject">
        <field name="name"/>
      </tree>
    </field>
  </record>

  <record id="education_subject_action" model="ir.actions.act_window">
    <field name="name">Subjects</field>
    <field name="res_model">education.subject</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
      <p class="oe_view_nocontent_create">
        Click to create a new Subject.
      </p>
    </field>
  </record>

  <menuitem id="education_subject_menu" parent="education_course_root" action="education_subject_action" sequence="100"/>

</odoo>
